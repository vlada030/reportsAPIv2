extends layouts/main-layout.pug   

block primaryNavBar
    include layouts/primaryNavBarAll.pug

block content
    br
    br
    br
    main.py-4
        .container
            .row
                .col-md-6.mx-auto
                    #accordion
                        .card.mb-3
                            #headingOne.card-header.bg-warning
                                h5.mb-0
                                    button.btn.collapsed.w-100.text-center(data-toggle='collapse', data-target='#collapseOne', aria-expanded='true', aria-controls='collapseOne') 
                                        i.fas.fa-user-edit.mr-2
                                        |   Promenite korisničko ime
                            #collapseOne.collapse(aria-labelledby='headingOne', data-parent='#accordion')
                                .card-body
                                    form#updateName
                                        .form-group.mb-4
                                            label(for='name').mb-2 Unesite novo korisničko ime
                                            input#name.form-control.mt-1.mb-1(name='name', type='text', value=userName)
                                            br

                                        button.btn.btn-info.btn-block.mt-3(type='submit')#submitName Izmeni
                        .card.mb-3
                            #headingFour.card-header.bg-warning
                                h5.mb-0
                                    button.btn.collapsed.w-100.text-center(data-toggle='collapse', data-target='#collapseFour', aria-expanded='true', aria-controls='collapseFour') 
                                        i.far.fa-envelope.mr-2
                                        |   Promenite korisnički email
                            #collapseFour.collapse(aria-labelledby='headingFour', data-parent='#accordion')
                                .card-body
                                    form#updateEmail
                                        .form-group
                                            label(for='email').mb-2 Unesite novi korisnički email
                                            input#email.form-control.mt-1.mb-1(name='email', type='email', value=userEmail)
                                            br

                                        button.btn.btn-info.btn-block.mt-3(type='submit')#submitEmail Izmeni
                        .card.mb-3
                            #headingTwo.card-header.bg-warning
                                h5.mb-0
                                    button.btn.collapsed.w-100.text-center(data-toggle='collapse', data-target='#collapseTwo', aria-expanded='false', aria-controls='collapseTwo') 
                                        i.fas.fa-key.mr-2
                                        |   Promenite korisničku šifru
                            #collapseTwo.collapse(aria-labelledby='headingTwo', data-parent='#accordion')
                                .card-body
                                    form#updatePassword
                                        .form-group.mb-4
                                            label.mb-2(for='currentPassword') Unesite postojeću šifru
                                            .password-container
                                                input#currentPassword.form-control.mt-1.mb-1(name='currentPassword', type='password')
                                                i.far.fa-eye.togglePassword

                                        .form-group
                                            label.mb-2(for='newPassword') Unesite novu šifru
                                            .password-container
                                                input#newPassword.form-control.mt-1.mb-1(name='newPassword', type='password')
                                                i.far.fa-eye.togglePassword
                                            br

                                        button.btn.btn-info.btn-block.mt-3(type='submit')#submitPassword Izmeni
                        .card.mb-3
                            #headingThree.card-header.bg-warning
                                h5.mb-0
                                    button.btn.collapsed.w-100.text-center(data-toggle='collapse', data-target='#collapseThree', aria-expanded='false', aria-controls='collapseThree') 
                                        i.far.fa-id-badge.mr-2
                                        |   Promenite avatar sliku
                            #collapseThree.collapse(aria-labelledby='headingThree', data-parent='#accordion')
                                .card-body
                                    form#updateAvatar
                                        .form-group.mb-0
                                            label.mb-2(for='avatar').btn.btn-info.btn-block Izaberite avatar sliku
                                            input#avatar.form-control.mt-1.mb-1(name='avatar', type='file' accept='image/*')

                                        .form-group.d-flex.align-items-center.justify-content-center.flex-column
                                            -var url = avatarUrl==null ? '/img//user/user-default.png' : `data:image/jpeg;base64,${avatarUrl}`;
                                            img#avatarImg.icon.icon--update-avatar.mb-3(src=url, alt="user")
                                            p#avatarDesc

                                        button.btn.btn-info.btn-block.mt-3(type='submit')#submitAvatar Izmeni                                     
                                        button.btn.btn-info.btn-block.mt-3(type='submit')#defaultAvatar Obriši Sliku                                     

    
block footer
    include layouts/footer.pug